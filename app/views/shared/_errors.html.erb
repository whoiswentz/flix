<% if model.errors.any? %>
  <section class="errors">
    <h2>Oops! Your form could not be saved.</h2>
    <h3>Please correct the following <%= pluralize(model.errors.size, "error") %></h3>
    <ul>
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>